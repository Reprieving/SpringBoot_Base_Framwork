<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.balance.mapper.information.ArticleMapper">
    <resultMap id="BaseResultMap" type="Article">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="article_title" property="articleTitle" jdbcType="VARCHAR"/>
        <result column="article_type" property="articleType" jdbcType="INTEGER"/>
        <result column="is_valid" property="isValid" jdbcType="BIT"/>
        <result column="verify_status" property="verifyStatus" jdbcType="INTEGER"/>
        <result column="create_by" property="createBy" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <!-- 扩展 -->
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="Base_Column_List">
      t.id, t.article_title, t.article_type, t.is_valid, t.verify_status, t.create_by, t.create_time
    </sql>

    <select id="selectByPage4Admin" resultMap="BaseResultMap" parameterType="map">
        select
        <include refid="Base_Column_List"/>, ss.user_name
        <include refid="pageSql4Admin"/>
        LIMIT #{startRow,jdbcType=INTEGER}, #{pageSize,jdbcType=INTEGER}
    </select>
    <sql id="pageSql4Admin">
        from information_article t
        join sys_subscriber ss on ss.id = t.create_by
        where 1 = 1
        <if test="startTime != null">
            and t.create_time &gt;= #{startTime}
        </if>
        <if test="endTime != null">
            and t.create_time &lt;= #{endTime}
        </if>
        <if test="articleType != null">
            and t.article_type = #{articleType}
        </if>
        <if test="verifyStatus != null">
            and t.verify_status = #{verifyStatus}
        </if>
        <if test="userName != null">
            and ss.user_name = #{userName}
        </if>
    </sql>
    <select id="selectCount4Admin" parameterType="map" resultType="int">
        select count(*)
        <include refid="pageSql4Admin"/>
    </select>

    <select id="selectByPage4User" resultMap="BaseResultMap" parameterType="map">
        select
        <include refid="Base_Column_List"/>, ui.user_name, ui.head_picture_url, ui.phone_number
        <include refid="pageSql4User"/>
        LIMIT #{startRow,jdbcType=INTEGER}, #{pageSize,jdbcType=INTEGER}
    </select>
    <sql id="pageSql4User">
        from information_article t
        join user_info ui on ui.id = t.create_by
        where 1 = 1
        <if test="startTime != null">
            and t.create_time &gt;= #{startTime}
        </if>
        <if test="endTime != null">
            and t.create_time &lt;= #{endTime}
        </if>
        <if test="articleType != null">
            and t.article_type = #{articleType}
        </if>
        <if test="verifyStatus != null">
            and t.verify_status = #{verifyStatus}
        </if>
        <if test="phoneNumber != null">
            and ui.phone_number = #{phoneNumber}
        </if>
        <if test="userName != null">
            and ui.user_name = #{userName}
        </if>
    </sql>
    <select id="selectCount4User" parameterType="map" resultType="int">
        select count(*)
        <include refid="pageSql4User"/>
    </select>

</mapper>