<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.balance.mapper.shop.OrderMapper">
    <resultMap id="OrderGoodsInfoMap" type="OrderGoodsInfo">
        <id property="orderId" column="order_id"></id>
        <result property="settlementId" column="settlement_id"></result>
        <result property="orderPrice" column="order_price"></result>
        <result property="createTime" column="create_time"></result>
        <collection property="orderItemList" ofType="OrderItem">
            <id property="spuId" column="order_ite_id"></id>
            <result property="number" column="number"></result>
            <result property="totalPrice" column="total_price"></result>
            <result property="spuName" column="spu_name"></result>
            <result property="imgUrl" column="default_img_url"></result>
            <result property="specJson" column="spec_json"></result>
        </collection>
    </resultMap>
    

    <sql id="listOrderGoodsInfo">
        SELECT
            a.id as order_id,
            a.settlement_id,
            a.price as order_price,
            a.create_time,
            b.number,
            b.total_price,
            c.goods_name as spu_name,
            c.default_img_url,
            d.spec_json
        FROM
            order_info a
            LEFT JOIN order_item b on a.id = b.order_id
            LEFT JOIN goods_spu c on b.goods_spu_id = c.id
            LEFT JOIN goods_sku d on b.goods_sku_id = d.id
    </sql>

    <select id="listOrderGoodsInfo" resultMap="OrderGoodsInfoMap">
        <include refid="listOrderGoodsInfo"/>
        WHERE
          a.user_id = #{userId}
          AND a.status = #{orderStatus}
    </select>

    <select id="getOrderGoodsInfo" resultMap="OrderGoodsInfoMap">
        <include refid="listOrderGoodsInfo"/>
        WHERE
          a.id = #{orderId}
    </select>


</mapper>