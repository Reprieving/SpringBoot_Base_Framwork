<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.balance.mapper.mission.MissionMapper">

    <select id="selectCountTodaySign" resultType="java.lang.Integer">
      SELECT count(1) FROM mission_sign_in WHERE user_id = #{userId} AND DATE_FORMAT(sign_time,'%Y-%m-%d') = #{today}
    </select>
</mapper>